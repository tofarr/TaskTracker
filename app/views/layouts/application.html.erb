<!DOCTYPE html>
<html class="has-background-light">
  <head>
    <title>Task Tracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="has-background-light">
    <nav class="navbar is-primary" role="navigation" aria-label="main navigation">

      <div class="navbar-brand">
        <%= link_to({controller: "tasks", action: "index"}, class: "navbar-item title") do  %>
          <%= icon('fas', 'tasks') %>
        <% end %>
      </div>

      <div class="navbar-menu">

        <div class="navbar-start">
          <div class="navbar-item has-dropdown is-hoverable">
            <a class="navbar-link">Menu</a>
            <div class="navbar-dropdown">
              <%=link_to "Tasks", {controller: "tasks", action: "index"}, class: "navbar-item" %>
              <%=link_to "Users", {controller: "users", action: "index"}, class: "navbar-item" %>
              <hr class="navbar-divider">
              <%=link_to "User Tags", {controller: "user_tags", action: "index"}, class: "navbar-item" %>
              <%=link_to "Task Tags", {controller: "task_tags", action: "index"}, class: "navbar-item" %>
              <%=link_to "Task Statuses", {controller: "task_statuses", action: "index"}, class: "navbar-item" %>
              <hr class="navbar-divider">
              <%=link_to "Task Links", {controller: "task_links", action: "index"}, class: "navbar-item" %>
              <%=link_to "Comments", {controller: "comments", action: "index"}, class: "navbar-item" %>
              <%=link_to "Attachments", {controller: "attachments", action: "index"}, class: "navbar-item" %>
              <hr class="navbar-divider">
              <%=link_to "Log out", "/sessions/logout", method: "post", class: "navbar-item" %>
            </div>
          </div>
        </div>

        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
              <%=link_to({controller: "users", action: "show", id: @current_user}, class: "button is-light") do  %>
                <%= render partial: "partials/icon", locals: {img: @current_user.avatar, size: 50} %>
                <span>
                  <%= @current_user.username %>
                </span>
              <% end %>
            </div>
          </div>
        </div>

      </div>

    </nav>

    <div class="section">
      <div class="container">
        <div class="box">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
