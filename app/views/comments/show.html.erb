<p id="notice"><%= notice %></p>

<div class="level">
  <h1 class="title">Comment</h1>
  <div class="level-item-right">
    <% if @comment.editable_by?(@current_user) %>
      <%= render partial: "partials/link_btn", locals: {href: edit_comment_path(@comment), icon: 'edit', text: 'Edit', css_class: 'is-info'} %>
      <%= link_to @comment, method: :delete, class: 'button is-danger', data: { confirm: 'Are you sure?' } do %>
        <span class="icon is-small">
          <%= icon('fas', 'trash') %>
        </span>
        <span>Destroy</span>
      <% end %>
    <% end %>
    <%= render partial: "partials/link_btn", locals: {href: comments_path, icon: 'caret-left', text: 'Back', css_class: 'is-light'} %>
  </div>
</div>

<div class="level">
  <label class="level-item-left column is-one-quarter">Task</label>
  <span class="level-item-left column is-three-quaters">
    <%= render partial: "partials/task", locals: {task: @comment.task} %>
  </span>
</div>

<div class="level">
  <label class="level-item-left column is-one-quarter">User</label>
  <span class="level-item-left column is-three-quaters">
    <%= render partial: "partials/user", locals: {user: @comment.user} %>
  </span>
</div>

<%= render partial: "partials/show_text", locals: {title: "Text", value: @comment.text} %>
