<div class="level">
  <h1 class="title">Editing Comment</h1>
  <div class="level-item-right">
    <%= link_to @comment, class: "button is-light" do %>
      <span class="icon is-small">
        <%= icon('fas', 'eye') %>
      </span>
      <span>Show</span>
    <% end %>
    <%= link_to comments_path, class: "button is-light" do %>
      <span class="icon is-small">
        <%= icon('fas', 'caret-left') %>
      </span>
      <span>Back</span>
    <% end %>
  </div>
</div>

<%= render 'form', comment: @comment %>
