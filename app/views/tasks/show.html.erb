<div class="level">
  <h1 class="title">Task</h1>
  <div class="level-item-right">
    <% if @current_user %>
      <%= render partial: "partials/link_btn", locals: {href: new_task_path, icon: 'plus', text: 'New Task', css_class: 'is-success'} %>
    <% end %>
    <% if @task.editable_by?(@current_user.id) %>
      <%= render partial: "partials/link_btn", locals: {href: edit_task_path(@task), icon: 'edit', text: 'Edit', css_class: 'is-info'} %>
      <%= link_to @task, method: :delete, class: 'button is-danger', data: { confirm: 'Are you sure?' } do %>
        <span class="icon is-small">
          <%= icon('fas', 'trash') %>
        </span>
        <span>Destroy</span>
      <% end %>
    <% end %>
    <%= render partial: "partials/link_btn", locals: {href: tasks_path, icon: 'caret-left', text: 'Back', css_class: 'is-light'} %>
  </div>
</div>

<%= render partial: "partials/notice", locals: {notice: notice} %>

<%= render partial: "partials/show_text", locals: {title: "Title", value: @task.identifier} %>
<%= render partial: "partials/show_markdown", locals: {id: dom_id(@task), title: "Description", value: @task.description} %>
<div class="level">
  <label class="level-item-left column is-one-quarter">Parent</label>
  <span class="level-item-left column is-three-quarters">
    <%if @task.parent %>
      <%= render partial: "partials/task", locals: {tag: @task.parent} %>
    <% end %>
  </span>
</div>
<div class="level">
  <label class="level-item-left column is-one-quarter">Assigned User</label>
  <span class="level-item-left column is-three-quarters">
    <%= render partial: "partials/user", locals: {user: @task.assigned_user} %>
  </span>
</div>
<div class="level">
  <label class="level-item-left column is-one-quarter">Created By</label>
  <span class="level-item-left column is-three-quarters">
    <%= render partial: "partials/user", locals: {user: @task.created_user} %>
  </span>
</div>
<div class="level">
  <label class="level-item-left column is-one-quarter">Status</label>
  <span class="level-item-left column is-three-quarters">
    <%= render partial: "partials/tag", locals: {tag: @task.status} %>
  </span>
</div>
<%= render partial: "partials/show_text", locals: {title: "Priority", value: @task.priority} %>
<%= render partial: "partials/show_text", locals: {title: "Calculated Estimate", value: @task.calculated_estimate} %>
<%= render partial: "partials/show_timestamp", locals: {title: "Due Date", value: @task.due_date} %>

<%= render partial: "partials/show_boolean", locals: {title: "Viewable", value: @task.viewable} %>
<%= render partial: "partials/show_boolean", locals: {title: "Editable", value: @task.editable} %>
<%= render partial: "partials/show_boolean", locals: {title: "Commentable", value: @task.commentable} %>
<%= render partial: "partials/show_boolean", locals: {title: "Public Viewable", value: @task.public_viewable} %>

<div class="level">
  <div class="level-item-left column is-one-quarter"></div>
  <span class="level-item-left column is-three-quarters">
    <%= render partial: "partials/link_btn", locals: {href: task_links_path(task_id: @task.id), icon: 'link', text: 'Links', css_class: 'is-light'} %>
    <%= render partial: "partials/link_btn", locals: {href: attachments_path(task_id: @task.id), icon: 'paperclip', text: 'Attachments', css_class: 'is-light'} %>
    <%= render partial: "partials/link_btn", locals: {href: comments_path(task_id: @task.id), icon: 'comments', text: 'Comments', css_class: 'is-light'} %>
  </span>
</div>
