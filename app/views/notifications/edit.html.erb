<div class="level">
  <h1 class="title">Editing Notification</h1>
  <div class="level-item-right">
    <%= link_to @notification, class: "button" do %>
      <span class="icon is-small">
        <%= icon('fas', 'eye') %>
      </span>
      <span>Show</span>
    <% end %>
    <%= render partial: "partials/link_btn", locals: {href: notifications_path, icon: 'caret-left', text: 'Back', css_class: 'back-btn'} %>
  </div>
</div>

<%= render 'form', notification: @notification %>
