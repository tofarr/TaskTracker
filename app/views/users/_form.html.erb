<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>


  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= form.label :verification_code %>
    <%= form.password_field :verification_code %>
  </div>

  <div class="field">
    <%= form.label :admin %>
    <%= form.check_box :admin, :disabled => !@current_user.admin? %>
  </div>

  <div class="field">
    <%= form.label :suspended %>
    <%= form.check_box :suspended, :disabled => !@current_user.admin? %>
  </div>

  <div class="field">
    <%= form.label :avatar %>
    <% if @user.avatar.attachment %>
      <%= image_tag @user.avatar.variant(resize: "50x50") %>
    <% end %>
    <%= form.file_field :avatar, direct_upload: true %>
  </div>

  <fieldset>
    <legend>User Tags</legend>
    <%= form.hidden_field "tag_ids[]", :value => "" %>
    <% UserTag.order(:title).each do |tag| %>
      <div class="field">
        <%= form.label tag.title %>
        <% if !@current_user.admin? && tag.only_admin_can_apply? %>
          <% if user.tags.include?(tag) %>
            <%= form.hidden_field "tag_ids[]", :value => tag.id %>
          <% end %>
          <%=user.tags.include?(tag)%>
        <% else %>
          <%= form.check_box(:tag_ids, {multiple: true, checked: user.tags.include?(tag)}, tag.id, nil) %>
        <% end %>
      </div>
    <% end %>
  </fieldset>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
