<p id="notice"><%= notice %></p>

<h1>Users</h1>

<% if @current_user.admin? %>
  <%= link_to 'New User', new_user_path %>
<% end %>

<br />

<%= form_with url: users_path, local: true, method: :get do |form| %>
  <div class="field">
    <%= form.label :search %>
    <%= form.text_field :q, :value => params[:q] %>
  </div>
  <div class="actions">
    <%= form.submit :search %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Email</th>
      <th>Name</th>
      <th>Username</th>
      <% if @current_user.admin? %>
        <th>Verification code</th>
      <% end %>
      <th>Admin</th>
      <th>Suspended</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <% if user.avatar.attachment %>
            <%=image_tag user.avatar.variant(resize: "50x50") %>
          <% end %>
        </td>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.username %></td>
        <% if @current_user.admin? %>
          <td><%= user.verification_code %></td>
        <% end %>
        <td><%= user.admin %></td>
        <td><%= user.suspended %></td>
        <td>
          <%= link_to 'Show', user %>
          <% if @current_user.admin? || user.id == @current_user.id %>
            <%= link_to 'Edit', edit_user_path(user) %>
          <% end %>
          <% if @current_user.admin? && user.id != @current_user.id %>
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @users %>
