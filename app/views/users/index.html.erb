<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Username</th>
      <% if @current_user.admin? %>
        <th>Verification code</th>
      <% end %>
      <th>Admin</th>
      <th>Suspended</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.username %></td>
        <% if @current_user.admin? %>
          <td><%= user.verification_code %></td>
        <% end %>
        <td><%= user.admin %></td>
        <td><%= user.suspended %></td>
        <td>
          <%= link_to 'Show', user %>
          <% if @current_user.admin? || user.id == @current_user.id %>
            <%= link_to 'Edit', edit_user_path(user) %>
          <% end %>
          <% if @current_user.admin? && user.id != @current_user.id %>
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

